<%- include('partials/header') -%>
<!------- Profile ------>
<div id="profileImg" class="dropdown right">
  <img class="dropBtn" src="/imgs/profile.png" alt="profile" width="100" height="200">
  <div class="dropdownContent">
    <a href="/upload">upload</a>
    <a href="/feed">main collection</a>
    <a href="/logout"">logout</a>
  </div>
  <p><%= user.userName %></p>
  <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
</div>

<!--------- Body ------->
<div class="body">
  <div id="grayBody">
    <h2 id="font" class="titleBottomSpace">pattern collection</h2>
    <ul class="listItems">
    <% for(var i=0; i<posts.length; i++) {%>
      <li id="item">
        <a href="/post/<%= posts[i]._id%>">
          <img id="itemImg" src="<%= posts[i].image%>">
        </a>
      </li>
    <% } %>
    </ul>
  </div>  
</div>
<%- include('partials/footer') -%>